package test6pack;
public class FindIndex {
    public static void main(String[] args) {
        // Define a string
        String str = "Hello, welcome to the world of Java programming!";
        
        // Character to find
        char ch = 'w';
        
        // Substring to find
        String substring = "Java";

        // Find the index of the character
        int charIndex = str.indexOf(ch);
        
        // Find the index of the substring
        int substringIndex = str.indexOf(substring);

        // Display the results
        if (charIndex != -1) {
            System.out.println("The index of character '" + ch + "' is: " + charIndex);
        } else {
            System.out.println("Character '" + ch + "' not found in the string.");
        }

        if (substringIndex != -1) {
            System.out.println("The index of substring \"" + substring + "\" is: " + substringIndex);
        } else {
            System.out.println("Substring \"" + substring + "\" not found in the string.");
        }
    }
}