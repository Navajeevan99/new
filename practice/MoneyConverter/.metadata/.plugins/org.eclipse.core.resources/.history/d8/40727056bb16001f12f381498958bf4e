	Button b1=new Button("Reset");
	add(b1);
	b1.setBounds(800,450,200,20);
	Choice i=new Choice();
	i.setBounds(500,400,200,50);
	i.add("India");
	add(i);
	Choice i1=new Choice();
	i1.add("America");
	i1.add("London");
	i1.add("Europe");
	i1.add("Russia");
	i1.add("China");
	add(i1);
	i1.setBounds(1100,400,200,50);
	setSize(1980,1080);
	setLayout(null);
	setVisible(true);
	
	}
	
	
}
public class Main {

